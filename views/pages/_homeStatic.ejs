  <!-- BROWSER TAB TITLE -->
  <title>Movie Ratings</title>

</head>
<body>


    <div class="content">
      <header>
        <h1 id="pagetitle">IS IT ACTUALLY GOOD?</h1>
      </header>
      <div id="searchbox">
        <p><strong>SEARCH FOR RATINGS:</strong></p>


        <!-- DYNAMIC PLACEHOLDER SCRIPT -->
        <script>

        placeholderloop();

        function placeholderloop() {

          setTimeout(function placeholderchange1(){document.getElementsByClassName('userURL')[0].placeholder = "Iron Man..."}, 3000);
          setTimeout(function placeholderchange2(){document.getElementsByClassName('userURL')[0].placeholder = "Spirited Away..."}, 6000);
          setTimeout(function placeholderchange3(){document.getElementsByClassName('userURL')[0].placeholder = "SAW 3D..."}, 9000);
          setTimeout(function placeholderchange4(){document.getElementsByClassName('userURL')[0].placeholder = "Shawshank Redemption..."}, 12000);
          setTimeout(function placeholderchange5(){document.getElementsByClassName('userURL')[0].placeholder = "Jurassic Park..."}, 15000);
          setTimeout(function placeholderchange6(){document.getElementsByClassName('userURL')[0].placeholder = "Toy Story 3..."}, 18000);
          setTimeout(function placeholderchange7(){document.getElementsByClassName('userURL')[0].placeholder = "Citizen Kane..."}, 21000);
          setTimeout(function placeholderchange8(){document.getElementsByClassName('userURL')[0].placeholder = "Type a movie title..."}, 24000);
          setTimeout(placeholderloop, 24000);
        }

        placeholderloop();



        </script>


        <!-- VERY UNFINISHED -->
        <!--  <input style="font-size:18pt;height:40px;width:300px;" id="search" class="userURL" type="text" placeholder="Type a movie title..."></input> -->

        <div class="button_container">


          <form #userURL="ngForm">
            <input style="font-size:18pt;height:40px;width:300px;" id="search" class="userURL" type="text" placeholder="Type a movie title..." required></input>

            <input style="font-size:18pt;height:40px;width:300px;" id="age" type="number" min="1" max="150" step="1" placeholder="How old are you?" required></input>

            <br>
            <br>
            <button id="subBtn" class="btn" type="submit" onclick='javascript: window.open("search?ID=" + document.getElementById("search").value + "&AGE=" + document.getElementById("age").value);' [disabled]="!userURL.form.valid">SEARCH</button>
          </form>

</div>





</div>
</div>


