<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include('../partials/_head') %>

<body>

  <% if (redirect) { %>
    <meta http-equiv="Refresh" content="0; url='http://localhost'" />
  <% } %>

  <%- include('../partials/_background') %>
  <div class="content">
    <header>
      <h1 id="pagetitle"><%= TitleText %></h1>
    </header>
  </div>





<style>
  .flex-container {

    display: flex;
    height: 100%;
    padding: 15px;
    gap: 5px;

  }

  .flex-container > div{
    border-radius: 5px;
    padding: 8px;
  }


  .item1 {
      /* flex:1 1 auto; */
      flex-grow:1;
    }

  .item2 {
      /* flex:2 1 auto; */
      flex-grow:2;
    }


</style>

<div class="flex-container">

    <div class="item1">
      <img src="<%= PosterSRC %>"></img>
      <figcaption style="color: white;"><%= FilmName %> (<%= FilmYear %>)</figcaption>
      <p><strong>Genres: <%= Genres %></strong></p>
    </div>

    <div class="item2">


            <h2><strong>Runtime: <%= FilmRuntime %></strong></h2>

            <h2><strong>Age Rating: <%= AgeRating %></strong></h2>

            <% if(IMDbRating != false){ %>
              <h2><strong>IMDb Rating: <%= IMDbRating %></strong></h2>
            <% } else { %>
              <h2><strong>Sorry! IMDb Score not found for this title.</strong></h2>
            <% } %>

            <% if(RTScore != false){ %>
              <h2><strong>Rotten Tomatoes Score: <%= RTScore %></strong></h2>
            <% } else { %>
              <h2><strong>Sorry! RT Score not found for this title.</strong></h2>
            <% } %>

            <% if(LocalRating != false){ %>
              <h2><strong>IsItGood Rating: <%= LocalRating %></strong></h2>
            <% } else { %>
              <h2><strong>Sorry! IsItGood score unavailable due to missing ratings data.</strong></h2>
            <% } %>

            <% if(AgeScore != false){ %>
              <h2><strong>Score for your age group: <%= AgeScore %></strong></h2>
            <% } else { %>
              <h2><strong>Sorry! There are no IsItGood reviews for this title yet.</strong></h2>
            <% } %>
    </div>

</div>


    <%- include('../partials/_foot') %>
  </body>
